@model Persona

@{
    ViewData["Title"] = "Personas";
}

<!-- ======= Primera parte de la pagina ======= -->
<div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/carrusel-1.png');">
    <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

        <h2>Ingresa tus datos</h2>
        <ol>
            <li><a asp-area="" asp-controller="home" asp-action="index">Inicio</a></li>
            <li>Persona</li>
        </ol>

    </div>
</div><!-- Fin primera parte -->

@*//HACER VALIDACIONES JS*@
<div class="contact">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <form id="frmFormulario" enctype="multipart/form-data">
            <div class="row gy-4 mt-1">
                <input type="hidden" id="IdPersona" value=0 />
                @*DATOS PERSONALES*@
                <div class="col-lg-6">
                    <div class="php-email-form">
                        <h3 class="text-center">Datos de la Persona</h3>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <input type="text" name="nombrePersona" class="form-control" id="nombrePersona" placeholder="Nombre de la Persona" required>
                            </div>
                            <div class="col-lg-6 form-group">
                                <input type="text" class="form-control" name="apellidoPersona" id="apellidoPersona" placeholder="Apellido de la Persona" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="numeroDocumento" id="numeroDocumento" placeholder="Numero de documento" required>
                        </div>
                        <div class="form-group">
                            <label>Fecha de nacimiento</label>
                            <input class="form-control" type="date" placeholder="Fecha de Nacimiento" id="fecNac" name='fechaNacimiento' />
                        </div>
                        <div class="form-group">
                            @Html.DropDownList("PaisID", null, htmlAttributes:new{@class = "form-select"})
                        </div>

                        <div class="form-group">
                            @Html.DropDownList("ProvinciaID", null, htmlAttributes:new{@class = "form-select"})
                        </div>

                        <div class="form-group">
                            @Html.DropDownList("LocalidadID", null, htmlAttributes:new{@class = "form-select"})
                        </div>

                        <div class="row">
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 form-group">
                                <input type="text" name="domicilio" class="form-control" id="domicilio" placeholder="Domicilio" required>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 form-group">
                                <input type="number" class="form-control" name="nro" id="nro" placeholder="Nro" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="telefono1Persona" id="telefono1Persona" placeholder="Telefono de la Persona" required>
                        </div>
                    </div>
                </div><!-- Fin primer card-->
                @*DATOS PARA EL PERFIL*@
                <div class="col-lg-6">
                    <div class="php-email-form">
                        <h3 class="text-center">Datos para el perfil</h3>
                        <div class="form-group">
                            <input type="text" name="instagram" placeholder="Instagram" class="form-control" id="instagram" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="twitter" placeholder="Twitter" class="form-control" id="twitter" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="linkedin" placeholder="Linkedin" class="form-control" id="linkedin" />
                        </div>

                        <div class="form-group">
                            <select id="generoID" class="form-select" name="generoID">
                                <option selected disabled>Seleccione un genero...</option>
                                <option value=0>Masculino</option>
                                <option value=1>Femenino</option>
                                <option value=2>Otro</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Curriculum</label>
                            <input type="file" name="curriculPersona" placeholder="Curriculum" class="form-control" id="curriculPersona" />
                        </div>
                        <div class="form-group">
                            <label>Foto de perfil</label>
                            <input type="file" name="personaFoto" placeholder="Foto de perfil" class="form-control" id="personaFoto" />
                        </div>


                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button onclick="guardarPersona()" type="submit">Registrarse</button></div>
                    </div>
                </div><!-- Fin segunda card-->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Personas.js"></script>
}
