<div class="contact">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4 mt-1">

      <div class="col-lg-6">
        <form role="form" class="php-email-form" style="min-height:505px">
          <h3 class="text-center">Datos de la Empresa</h3>
          <div class="row">
            <div class="col-lg-6 form-group">
              <input type="text" name="name" class="form-control" id="name" placeholder="Nombre de la Empresa" required>
            </div>
            <div class="col-lg-6 form-group">
              <input type="text" class="form-control" name="cuit" id="cuit" placeholder="CUIT" required>
            </div>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="telefono" id="telefono" placeholder="Telefono de la Empresa" required>
          </div>
          <div class="form-group">
            <textarea class="form-control" name="descripcion" rows="5" placeholder="Descripcion de la actividad de empresa" required></textarea>
          </div>
          <div class="my-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your message has been sent. Thank you!</div>
          </div>
          <div class="text-center"><button type="submit">Send Message</button></div>
        </form>
      </div><!-- End Contact Form -->

      <div class="col-lg-6">
        <form action="forms/contact.php" method="post" role="form" class="php-email-form">
          <h3 class="text-center">Datos para el perfil</h3>

          <div class="form-group">
            <select class="form-select" id='rol' required aria-label='rol'>
              <option value='' disabled selected>Seleccione pais...</option>
              <option value="Empresa">Argentina</option>
              <option value="Usuario">Brasil</option>
            </select>
          </div>

          <div class="form-group">
            <select class="form-select" id='rol' required aria-label='rol'>
              <option value='' disabled selected>Seleccione provincia...</option>
              <option value="Empresa">Argentina</option>
              <option value="Usuario">Brasil</option>
            </select>
          </div>

          <div class="form-group">
            <select class="form-select" id='rol' required aria-label='rol'>
              <option value='' disabled selected>Seleccione localidad...</option>
              <option value="Empresa">Argentina</option>
              <option value="Usuario">Brasil</option>
            </select>
          </div>

          <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-10 form-group">
              <input type="text" name="name" class="form-control" id="name" placeholder="Domicilio" required>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 form-group">
              <input type="email" class="form-control" name="email" id="email" placeholder="Nro" required>
            </div>
          </div>
          <div class="form-group">
            <label>Foto de perfil</label>
            <input type="file" name="empresaFoto" placeholder="Foto de perfil" class="form-control" id="fotoPerfilEmpresa"
          </div>

          <div class="my-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your message has been sent. Thank you!</div>
          </div>
          <div class="text-center"><button type="submit">Send Message</button></div>
        </form>
      </div><!-- End Contact Form -->

    </div>
  </div>
</div>
