@model IEnumerable<WorkNetwork.Models.Localidad>

@{
    ViewData["Title"] = "Localidad";
}


<!-- ======= Primera parte de la pagina ======= -->
<div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/carrusel-1.png');">
    <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

        <h2>Localidades</h2>
        <ol>
            <li><a asp-area="" asp-controller="home" asp-action="index">Inicio</a></li>
            <li>Localidades</li>
        </ol>

    </div>
</div><!-- Fin primera parte -->
<section>
    <div class="container">
        <button type="button" class='btn btn-login mb-3' onclick='AbrirModal(modalCrearLocalidad)'>Crear Localidad</button>

        <table class='table'>
            <thead>
                <tr>
                    <th>
                        Localidad
                    </th>
                    <th>
                        Código Postal
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody id='tbody-localidad'></tbody>
        </table>

    </div>
</section>
<!--Modal-->
<div class="modal fade" id="modalCrearLocalidad" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <h5 class="modal-title" id="titulo-modal-">Crear localidad</h5>
            </div>
            <div class="modal-body">
                <div class="contact">
                    <div class="php-email-form">
                        <div class="alert alert-danger " id='alertLocalidad'>El campo descripcion no puede estar vacio</div>
                        <input type="hidden" id='idLocalidad' />
                        <input placeholder="Ingrese una localidad" type="text" id="nombreLocalidad" class="form-control mb-3" />
                        <input placeholder="Código Postal" type="number" id="cpLocalidad" class='form-control' maxlength="4" />
                        <div>
                            <label class="control-label"><b> País: </b></label>
                            @Html.DropDownList("PaisID", null, htmlAttributes: new {@class = "form-control"})
                        </div>
                        <div>
                            <label class="control-label"><b> Provincia: </b></label>
                            @Html.DropDownList("ProvinciaID", null, htmlAttributes: new {@class = "form-control"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-outline-info" onclick='GuardarLocalidad()'>Crear</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src='~/js/Localidades.js'></script>
<script>
    window.onload = CompletarTablaLocalidades();
</script>
}
