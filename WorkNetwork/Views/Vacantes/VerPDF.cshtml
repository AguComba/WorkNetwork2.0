@{
    var cvPersona = ViewData["persona"] as PersonaMostrar;
}

<div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/carrusel-5.png');"></div>



<section id="blog" class="blog">
    <div class="container position-relative d-flex flex-column align-items-center mt-1 mb-4" data-aos="fade"><h2>Ver curriculum</h2></div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @if(cvPersona?.Curriculum != null)
        {
            <embed src="data:@cvPersona.TipoCV;base64,@cvPersona.CurriculumString" type="application/pdf" width="100%" height="800px"/>
        }
        else
        {
            <h1>Esta persona no tiene curriculum</h1>
        }

    </div>
</section>
