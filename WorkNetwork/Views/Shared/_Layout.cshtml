@{
    var personaInfo = ViewData["persona"] as PersonaMostrar;
}
<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Inicio Work-Network 2.0</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Roboto:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Work+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet">
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">

</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header d-flex align-items-center">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a asp-area="" asp-controller="home" asp-action="index" class="logo d-flex align-items-center">
                <h1>Work<span>-</span>Network <span>2.0</span></h1>
            </a>

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
            <nav id="navbar" class="navbar">
                <ul>

                    @if (User.IsInRole("Empresa"))
                    {
                        <li><a asp-area="" class="nav-link text-white" asp-controller="home" asp-action="index">Inicio</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="vacantes" asp-action="index">Vacantes</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="empresas" asp-action="PerfilEmpresa">Perfil</a></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="nav-link btn btn-link text-white">Cerrar Sesión<i class="bi bi-power"></i></button>
                            </form>
                        </li>
                    }

                    @if (User.IsInRole("Usuario"))
                    {
                        <li><a asp-area="" class="nav-link text-white" asp-controller="home" asp-action="index">Inicio</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="vacantes" asp-action="PostulantesPersona">Mis Postulaciones</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="personas" asp-action="PerfilUser">Perfil</a></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="nav-link btn btn-link text-white">Cerrar Sesión <i class="bi bi-power"></i></button>
                            </form>
                        </li>
                    }

                    @if (User.IsInRole("SuperUsuario"))
                    {
                        <li><a asp-area="" class="nav-link text-white" asp-controller="paises" asp-action="index">Paises</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="provincias" asp-action="index">Provincias</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="localidades" asp-action="index">Localidades</a></li>
                        <li><a asp-area="" class="nav-link text-white" asp-controller="rubros" asp-action="index">Rubros</a></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="nav-link btn btn-link text-white">Cerrar Sesión <i class="bi bi-power"></i></button>
                            </form>
                        </li>
                    }
                </ul>
            </nav>        
        </div>
    </header><!-- End Header -->

    <div class="projects-section" id='perfilUser'>
        <main role="main">
            @RenderBody()
        </main>
    </div>

   
    <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src='~/lib/bootstrap/dist/js/bootstrap.bundle.min.js'></script>
    <script src='~/lib/aos/aos.js'></script>
    <script src='~/js/main.js'></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
